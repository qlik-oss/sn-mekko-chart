{
  "scriptappy": "1.0.0",
  "info": {
    "name": "@nebula.js/sn-mekko-chart:properties",
    "description": "Mekko chart generic object definition",
    "version": "1.0.0",
    "license": "MIT",
    "stability": "experimental",
    "x-qlik-visibility": "public"
  },
  "entries": {
    "properties": {
      "kind": "object",
      "entries": {
        "version": {
          "description": "Current version of this generic object definition",
          "defaultValue": "1.0.0",
          "type": "string"
        },
        "qHyperCubeDef": {
          "kind": "object",
          "entries": {
            "qSuppressZero": {
              "defaultValue": true,
              "type": "boolean"
            },
            "qSuppressMissing": {
              "defaultValue": true,
              "type": "boolean"
            },
            "qCalcCondition": {
              "type": "NxCalcCond"
            }
          }
        },
        "showTitles": {
          "optional": true,
          "defaultValue": true,
          "type": "boolean"
        },
        "title": {
          "optional": true,
          "defaultValue": "",
          "type": "string"
        },
        "subtitle": {
          "optional": true,
          "defaultValue": "",
          "type": "string"
        },
        "footnote": {
          "optional": true,
          "defaultValue": "",
          "type": "string"
        },
        "cellColor": {
          "kind": "object",
          "entries": {
            "byDimension": {
              "type": "#/definitions/byDimensionConfig"
            },
            "mode": {
              "defaultValue": "auto",
              "kind": "union",
              "items": [
                {
                  "kind": "literal",
                  "value": "'auto'"
                },
                {
                  "kind": "literal",
                  "value": "'byDimension'"
                }
              ],
              "type": "string"
            },
            "legend": {
              "type": "#/definitions/legendConfig"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "legendConfig": {
      "kind": "object",
      "entries": {
        "show": {
          "defaultValue": "auto",
          "kind": "union",
          "items": [
            {
              "type": "boolean"
            },
            {
              "kind": "literal",
              "value": "'auto'"
            }
          ]
        },
        "showTitle": {
          "defaultValue": true,
          "type": "boolean"
        }
      }
    },
    "byDimensionConfig": {
      "kind": "object",
      "entries": {
        "type": {
          "kind": "union",
          "items": [
            {
              "kind": "literal",
              "value": "'index'"
            },
            {
              "kind": "literal",
              "value": "'libraryId'"
            },
            {
              "kind": "literal",
              "value": "'expression'"
            }
          ],
          "type": "string"
        },
        "typeValue": {
          "kind": "union",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "string"
            }
          ],
          "type": "any"
        },
        "label": {
          "optional": true,
          "kind": "union",
          "items": [
            {
              "type": "string"
            },
            {
              "type": "StringExpression"
            }
          ],
          "type": "any"
        },
        "persistent": {
          "optional": true,
          "defaultValue": false,
          "type": "boolean"
        },
        "scheme": {
          "optional": true,
          "defaultValue": "",
          "type": "string"
        }
      }
    }
  }
}